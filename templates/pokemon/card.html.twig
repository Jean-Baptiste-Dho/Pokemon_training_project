<div class="pokemon-card pokemon-card-{{ pokemon.pokemon.color }} w-10">
    <div class="centered border-{{ pokemon.pokemon.color }}">{{ pokemon.pokemon.name }}
        {% if pokemon.surname %}
            ({{ pokemon.surname }})
        {% endif %}
    </div>
    <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{{ pokemon.pokemon.pokedexId }}.png"
         alt="{{ pokemon.pokemon.name }}">
    {% if is_granted('update', pokemon) or is_granted('ROLE_ADMIN') %}
        {% if trade is not defined %}
            <div class="centered pokemon-card-{{ pokemon.pokemon.color }} p-5">
                <a class="border-{{ pokemon.pokemon.color }}"
                   href="{{ path('pokemon_update', {'id': pokemon.id}) }}">Modifier</a>
                <a class="border-{{ pokemon.pokemon.color }}"
                   href="{{ path('pokemon_delete', {'id': pokemon.id}) }}">Supprimer</a>
            </div>
        {% elseif trade %}
            <div class="centered pokemon-card-{{ pokemon.pokemon.color }} p-5">
                <a class="border-{{ pokemon.pokemon.color }}"
                   href="">Ã‰changer</a>
            </div>
        {% endif %}
    {% endif %}
</div>