{% extends 'base.html.twig' %}

{% block title %}Pokemons{% endblock %}

{% block body %}
<h3>Liste des dresseurs et leurs pok√©mons :</h3>

    {% for dresseur in dresseurs %}
    <div>
        <h3>{{ dresseur.dresseurname }}

                    {%  if (is_granted('ROLE_ADMIN'))%}
            <a href={{ path('dresseur_delete', {'id': dresseur.id}) }}>-Supprimer-</a> <a href={{ path('dresseur_update', {'id': dresseur.id}) }}> -Modifier-</a>
                    {% endif %}
        </h3>

        <ul>
            {% for pokemonSpecie in dresseur.pokemonSpecies %}
                <li>{{ pokemonSpecie.name }} - {{ pokemonSpecie.type }}
                    {%  if (is_granted('ROLE_ADMIN'))%}
                    <a href={{ path('pokemon_delete', {'id': pokemonSpecie.id}) }}>-Supprimer-</a> <a href={{ path('pokemon_update', {'id': pokemonSpecie.id}) }}>-Modifier-</a>}
                    {% endif %}

                </li>
            {% endfor %}
        </ul>
    </div>

    {% endfor %}



{% endblock %}

