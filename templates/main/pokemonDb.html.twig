{% extends 'base.html.twig' %}

{% block title %}Pokemons DataBase{% endblock %}

{% block body %}
    <h1 class="centered m-25 p-10">Pok√©mons capturables</h1>
    {% include 'paginationBar/paginationBar.html.twig' %}
    <div class="section3 w90">
        {% for pokemon in paginator.result %}
            <div class="pokemon-card pokemon-card-{{ pokemon.color }} w-10">
                <div class="centered border-{{ pokemon.color }}">{{ pokemon.name }}
                </div>
                <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{{ pokemon.pokedexId }}.png"
                     alt="{{ pokemon.name }}">
            </div>
        {% endfor %}
    </div>
    {% include 'paginationBar/paginationBar.html.twig' %}
{% endblock %}

